# Telegram Bot 配置
BOT_TOKEN=your_bot_token_here

# TRON 錢包地址（用於接收支付）
USDT_ADDRESS=your_tron_wallet_address_here

# 管理員 Telegram ID（多個用逗號分隔）
ADMIN_IDS=123456789,987654321

# TronGrid API 配置（可選）
TRONGRID_API_KEY=your_trongrid_api_key_here

# 測試模式（設為 true 使用 1 TRX 測試）
TEST_MODE=false

# 其他配置
DATABASE_FILE=bot_database.json
MONITORING_INTERVAL=60
CONFIRMATION_BLOCKS=1
ORDER_TIMEOUT_HOURS=24
ACTIVATION_CODE_LENGTH=16